extends log_base

block title
  title MyBlog+ | Regist

block body

  body.gray-bg
    .middle-box.text-center.loginscreen.animated.fadeInDown
      div
       div.logo-theme
          h3.logo-name MyBlog+
      h3 Register to MyBlog+
      p Create account to see it in action.
      form.m-t(role='form', action='signin')
          .form-group
            input.form-control(type='text', placeholder='Name', required='')
          .form-group
            input.form-control(type='password', placeholder='Password', required='')
          .form-group
            input.form-control(type='password', placeholder='Again Password', required='')
          .form-group
            input.form-control(type='text', placeholder='Phone Number', required='')
          .form-group
            input.form-control(type='email', placeholder='Email', required='')
          
          .form-group
            .checkbox.i-checks
              label
                input(type='checkbox')
                i
                | Agree the terms and policy
          button.btn.btn-primary.block.full-width.m-b(type='submit') Register
          p.text-muted.text-center
            h5 Already have an account?
          a.btn.btn-sm.btn-white.btn-block.btn-bottom(href='signin') Login

