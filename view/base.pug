  body.pace-done
    .pace.pace-inactive
      .pace-progress(data-progress-text='100%', data-progress='99', style='transform: translate3d(100%, 0px, 0px);')
        .pace-progress-inner
      .pace-activity
    .pace.pace-inactive
      .pace-progress(data-progress-text='100%', data-progress='99', style='transform: translate3d(100%, 0px, 0px);')
        .pace-progress-inner
      .pace-activity
    #wrapper
      nav.navbar-default.navbar-static-side(role='navigation')
        .sidebar-collapse
          ul#side-menu.nav.metismenu
            li.nav-header
              .dropdown.profile-element
                span
                  img.img-circle(alt='image', src='img/user.jpg')
                a.dropdown-toggle(data-toggle='dropdown', href=' ')
                  span.clear
                    span.block.m-t-xs
                      strong.font-bold Palette Chen
                    span.text-muted.text-xs.block
                      | Stranger
                      b.caret
                ul.dropdown-menu.animated.fadeInRight.m-t-xs
                  li
                    a Profile
                  li
                    a Contacts
                  li
                    a Mailbox
                  li.divider
                  li
                    a(href='login') Logout
              .logo-element
                | Blog+
            li#home-btn.base-btn
              a(href='index')
                i.fa.fa-home
                span.nav-babel Home
            li#user-btn.base-btn
              a(href='user')
                i.fa.fa-user
                span.nav-label User Profiles
            li#publish-btn.base-btn
              a(href='publish')
                i.fa.fa-plus-square
                span.nav-label Publish a blog
            li#friends-btn.base-btn
              a(href='friends')
                i.fa.fa-group
                span.nav-label Friends
            li#search-btn.base-btn
              a(href='search')
                i.fa.fa-search
                span.nav-label Search New Friends
